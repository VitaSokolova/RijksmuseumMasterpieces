<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="stubsColor" format="color|reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="stubsColor">@color/concrete</item>

        <item name="android:windowBackground">@color/gray</item>
        <item name="android:colorBackground">@color/gray</item>
    </style>

    <!-- Стиль шиммера для анимации загрузки -->
    <style name="AppShimmer">
        <item name="shimmer_duration">1200</item>
        <item name="shimmer_colored">true</item>
        <item name="shimmer_highlight_color">@color/white</item>
        <item name="shimmer_base_color">@color/gray</item>
        <item name="shimmer_highlight_alpha">0.4</item>
        <item name="shimmer_base_alpha">1.0</item>
    </style>
</resources>